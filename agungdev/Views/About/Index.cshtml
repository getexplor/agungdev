@{
    ViewData["Title"] = "About";
    ViewData["AboutActive"] = "bg-success";
}

<!-- START BREADCRUMB -->
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item active">About</li>
</ol>
<!-- END BREADCRUMB -->
<!-- START card -->
<div class="card">
    <div class="card-block">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-transparent">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs nav-tabs-linetriangle" data-init-reponsive-tabs="dropdownfx">
                        <li class="nav-item">
                            <a href="#" class="active" data-toggle="tab" data-target="#fade1"><span>About Me</span></a>
                        </li>
                        <li class="nav-item">
                            <a href="#" data-toggle="tab" data-target="#fade2"><span>Personal Data</span></a>
                        </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="fade1">
                            <div class="row column-seperation">
                                <div class="col-lg-12">
                                    <form>
                                        <div class="form-group form-group-default">
                                            <textarea class="form-control" id="name" placeholder="Briefly Describe your Abilities" style="margin-top: 0px; margin-bottom: 0px; height: 200px;" aria-invalid="false"></textarea>
                                        </div>
                                        <button class="btn btn-primary col-12">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="fade2">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form class="" role="form">
                                        <div class="form-group form-group-default required ">
                                            <label>Current Position</label>
                                            <input type="text" class="form-control" placeholder="ex: Web Developer" required>
                                        </div>
                                        <div class="form-group form-group-default required">
                                            <label>City</label>
                                            <input type="text" class="form-control" placeholder="ex: Bandung" required>
                                        </div>
                                        <div class="form-group form-group-default required">
                                            <label>Country</label>
                                            <input type="text" class="form-control" placeholder="ex: Indonesia" required>
                                        </div>
                                        <div class="form-group  form-group-default required">
                                            <label>Age</label>
                                            <input type="number" class="form-control" placeholder="ex: 20" required>
                                        </div>
                                        <div class="form-group  form-group-default required">
                                            <label>Degree</label>
                                            <input type="text" class="form-control" placeholder="ex: Bachelor of Informatics Engineering" required>
                                        </div>
                                        <div class="form-group  form-group-default required">
                                            <label>Birthday</label>
                                            <input type="date" class="form-control" required>
                                        </div>
                                        <button class="btn btn-primary col-12">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END card -->