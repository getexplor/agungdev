<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAddService">
    <i class="fa fa-plus"></i>&nbspAdd New Service
</button>

<!--Modal Add-->
<div class="modal fade slide-up disable-scroll" id="modalAddService" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog ">
        <div class="modal-content-wrapper">
            <div class="modal-content">
                <div class="modal-header clearfix text-left">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="pg-close fs-14"></i>
                    </button>
                    <h5>Add <span class="semi-bold">New Service</span></h5>
                </div>
                <div class="modal-body">
                    <form role="form">
                        <div class="form-group">
                            <label>Service Icon</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="form-group required">
                            <label>Service Name</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="form-group required">
                            <label>Service Content</label>
                            <textarea class="form-control" style="height:200px;" required></textarea>
                        </div>
                    </form>
                    <div class="pull-right">
                        <button type="button" class="btn btn-primary btn-block m-t-5">Create</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
</div>
<!--Modal Edit-->
<div class="modal fade slide-up disable-scroll" id="modalEditService" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog ">
        <div class="modal-content-wrapper">
            <div class="modal-content">
                <div class="modal-header clearfix text-left">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="pg-close fs-14"></i>
                    </button>
                    <h5>Update <span class="semi-bold">Your Service</span></h5>
                </div>
                <div class="modal-body">
                    <form role="form">
                        <div class="form-group">
                            <label>Service Icon</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="form-group required">
                            <label>Service Name</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="form-group required">
                            <label>Service Content</label>
                            <textarea class="form-control" style="height:200px;" required></textarea>
                        </div>
                    </form>
                    <div class="pull-right">
                        <button type="button" class="btn btn-primary btn-block m-t-5">Update</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
</div>